{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "meta": {
    "title": "The Amnesty Humanity WordPress thme Playground",
    "description": "A demo enviroment for our Humanity theme",
    "author": "Humanity",
    "categories": [
      "theme",
      "demo"
    ]
  },
  "landingPage": "/wp-admin/themes.php",
  "preferredVersions": {
    "php": "8.2",
    "wp": "6.6"
  },
  "features": {
    "networking": true
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "siteOptions": {
    "blogname": "Humanity Theme"
  },
  "login": true,
  "steps": [
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "installTheme",
      "themeData": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=AmnestyAM/humanity-theme&release=playground"
      }
    }
  ]
}
